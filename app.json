{
  "expo": {
    "name": "GBG | Pro Recrute",
    "slug": "pro-recrute-gbg",
    "version": "1.0.0",
    "scheme": "prorecruteapp",
    "owner": "weexduunx88",
    "description": "Pro Recrute GBG is a recruitment app designed to connect job seekers with employers in the Greater Banjul Area, Gambia. It provides a platform for users to search for job opportunities, apply for positions, and manage their profiles.",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cette application a besoin d'accéder à l'appareil photo pour prendre des photos de profil et scanner des documents.",
        "NSPhotoLibraryUsageDescription": "Cette application a besoin d'accéder à la galerie photo pour sélectionner des images.",
        "NSLocationWhenInUseUsageDescription": "Cette application utilise votre localisation pour vous proposer des offres d'emploi près de chez vous.",
        "NSMicrophoneUsageDescription": "Cette application a besoin d'accéder au microphone pour enregistrer des messages vocaux."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.weexduunx88.prorecrutegbg",
      "googleServicesFile":"./google-services.json",
       "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_MEDIA_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "LOCATION",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE"
      ]

    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "dark": {
            "image": "./assets/images/logo-gbg-white.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 100,
          "resizeMode": "native",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5cd7538f-3fae-4c93-935e-e25ee854dd07"
      }
    }
  }
}
